strict graph {
	rankdir = LR;
	node [ color = red    ] " x1"
	node [ color = black    ] " x2"
	node [ color = black    ] " x3"
	" x1" -- " x2"
	" x2" -- " x3"
	" x3" -- " x1"
	node [ color = black    ] "~x1"
	node [ color = red    ] " x5"
	node [ color = black    ] " x6"
	"~x1" -- " x5"
	" x5" -- " x6"
	" x6" -- "~x1"
	" x1" -- "~x1" [ style = dotted ]
}