strict graph {
	rankdir = LR;
	node [ color = black    ] " x1"
	node [ color = red    ] "~x1"
	node [ color = black    ] "~x2"
	" x1" -- "~x1"
	"~x1" -- "~x2"
	"~x2" -- " x1"
	node [ color = red    ] " x3"
	node [ color = black    ] " x2"
	node [ color = black    ] " x4"
	" x3" -- " x2"
	" x2" -- " x4"
	" x4" -- " x3"
	node [ color = red    ] "~x1"
	node [ color = black    ] "~x3"
	node [ color = black    ] "~x4"
	"~x1" -- "~x3"
	"~x3" -- "~x4"
	"~x4" -- "~x1"
	" x4" -- "~x4" [ style = dotted ]
	" x2" -- "~x2" [ style = dotted ]
	" x3" -- "~x3" [ style = dotted ]
}